<!DOCTYPE html>
<html>
<head>
  <title>ChemicalRoll</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


<div class='container'>
	<% if notice %>
		<div class="alert alert-success"><%= notice %></div>
	<% end %>
	<% if alert %>
		<div class="alert alert-error"><%= alert %></div>
	<% end %>

	<%= yield %>
</div>

</body>
</html>